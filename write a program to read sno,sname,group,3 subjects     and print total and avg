# write a program to read sno,sname,group,3 subjects
 #and print total and avg
def calculate_marks():
    sno = input("Enter student number: ")
    sname = input("Enter student name: ")
    group = input("Enter student group: ")
    marks = []
    for i in range(3):
        subject_name = input("Enter marks for subject {}: ".format(i + 1))
        marks.append(int(subject_name))
    total_marks = sum(marks)
    average_marks = total_marks / 3
    print("Student Number:", sno)
    print("Student Name:", sname)
    print("Student Group:", group)
    print("Total Marks:", total_marks)
    print("Average Marks:", average_marks)
